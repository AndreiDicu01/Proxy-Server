
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
                "main.cpp",
				"http-utils.cpp",
                "Proxy.cpp",
                "Request.cpp",
				"Logger.cpp",
				"Timer.cpp",
				"Cache.cpp",
				"Response.cpp",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"isDefault": true,
				"kind": "build"
			}
		}
	]
}